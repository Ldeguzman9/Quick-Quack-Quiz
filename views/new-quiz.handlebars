<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Quick Quack Quiz</title>
  <link rel="stylesheet" href="/CSS/styles.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
  />

</head>
<div class="quiz card">
  <div class="card-header">
    <h2>Create New Quiz</h2>
  </div>
  <form id="new-quiz-form" class="card-body">
    <label class="form-label" for="quiz-title">Title</label>
    <input type="text" name="quiz-title" class="form-input" />
    <label class="form-label" for="quiz-body">Content</label>
    <textarea name="quiz-body" class="form-input"></textarea>
    <button type="submit" class="btn">Create</button>
  </form>
</div>
<script src="/js/new.js"></script>