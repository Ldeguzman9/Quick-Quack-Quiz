<div class="quiz card">
  <div class="card-header">
    <h2>Edit Quiz</h2>
  </div>
  <form id="edit-quiz-form" class="card-body">
    <input type="hidden" name="quiz-id" value="{{quiz.id}}" />

    <label class="form-label" for="quiz-title">Title</label>
    <input
      type="text"
      name="quiz-title"
      value="{{quiz.title}}"
      class="form-input"
    />

    <label class="form-label" for="quiz-body">Content</label>
    <textarea
      name="quiz-questions"
      class="form-input"
    >{{quiz.questions}}</textarea>
    <textarea name="quiz-body" class="form-input">{{quiz.body}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>