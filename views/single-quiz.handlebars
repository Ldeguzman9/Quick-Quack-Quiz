<div class="quiz">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{quiz.title}}</h2>
      <div>
        Posted by
        {{quiz.User.email}}
        on
        {{format_date quiz.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{quiz.body}}
    </div>
  </article>

  {{#if quiz.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each quiz.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash;
              {{User.email}},
              {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>